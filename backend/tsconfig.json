{
    "compilerOptions": {
      "target": "es2016",                               
      "experimentalDecorators": true ,
      "module": "commonjs",
      "esModuleInterop": true,
      "rootDir": "./src",     
      "outDir": "./dist",                             
      "typeRoots": ["./node_modules/@types", "./src/config/types/**/*"],   
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "useUnknownInCatchVariables": false,
      "skipLibCheck": true 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  